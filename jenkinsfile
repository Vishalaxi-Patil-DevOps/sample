pipeline {
    agent any

    stages {
        stage("Git Checkout") {
            steps {
               git url: 'https://github.com/Vishalaxi-Patil-DevOps/sample.git'
            }
        }
        stage("Build docker image") {
            steps {
                script {
                    def image = 'yourapp:latest'
                    def dockerfilePath = 'F:\\aws_devOps_Intellipaat\\devOps\\project\\sample\\Dockerfile'

                    // Build Docker image
                    docker.build(image, '-f ' + dockerfilePath + ' .')
                }
            }
        }
    }

}
